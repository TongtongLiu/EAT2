<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edu.thss.smartdental.eat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/food_xhs"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.edu.thss.smartdental.eat.EatCalendar"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.edu.thss.smartdental.eat.MyDiet"
            android:label="MyDiet" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
            <intent-filter>
                <action android:name="add_diet" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.edu.thss.smartdental.eat.FoodPicker"
            android:label="MyFood" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
             <intent-filter>
                <action android:name="add_food" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
    		android:name="com.edu.thss.smartdental.eat.Scoring"
    		android:label="Scoring" 
    		android:parentActivityName="com.edu.thss.smartdental.eat.EatCalendar" >
     		<intent-filter>
        		<action android:name="scoring" />
        		<category android:name="android.intent.category.DEFAULT" />
    		</intent-filter>
		</activity>
       </application>
</manifest>