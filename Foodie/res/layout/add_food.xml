<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    tools:context="com.edu.thss.smartdental.eat.MyFood" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="30dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/about_angle_left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/about_angle_right" />

        <TextView
            android:id="@+id/add_food_textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|fill_vertical"
           	android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:background="@drawable/background_title"
        android:padding="10dp"
        android:paddingTop="10dp"
        android:text="食物名称"
        android:textAppearance="?android:attr/textAppearanceMedium" />

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
            
        <com.edu.thss.smartdental.eat.WheelView
	        android:id="@+id/type_wv"
	        android:layout_width="100dp"
	        android:layout_height="160dp"
	        android:layout_weight="1" />
	
        <com.edu.thss.smartdental.eat.WheelView
	        android:id="@+id/name_wv"
	        android:layout_width="100dp"
	        android:layout_height="160dp"
	        android:layout_weight="1" />
    </LinearLayout>
    
	<TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:background="@drawable/background_title"
        android:padding="10dp"
        android:paddingTop="10dp"
        android:text="食物重量"
        android:textAppearance="?android:attr/textAppearanceMedium" />

	<SeekBar
	    android:id="@+id/add_food_seekBar_weight"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.00" >

	    <Button
	        android:id="@+id/add_food_button_save"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" 
	        android:text="保存" />
	    
	    <Button
	        android:id="@+id/add_food_button_continue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" 
	        android:text="继续" />

	</LinearLayout>

</LinearLayout>