<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/grey"
    android:scrollbars="vertical"
    tools:context="com.edu.thss.smartdental.eat.DietPanel" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.edu.thss.smartdental.eat" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="0.10"
                android:background="#5cc8e5" >

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/textView_diet"
                    android:layout_alignBottom="@+id/textView_diet"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/back" />

                <TextView
                    android:id="@+id/textView_diet"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.18"
                    android:text="食  谱"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_nutrition"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/corner_top"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="一天的营养"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />

                <com.edu.thss.smartdental.eat.NoScrollListView
                    android:id="@+id/listView_nItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.91" >
                </com.edu.thss.smartdental.eat.NoScrollListView>

                <TextView
                    android:id="@+id/textView_4"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/corner_bottom"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.18"
                android:orientation="vertical" >

				<RelativeLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/corner_top" >

                    <TextView
                        android:id="@+id/textView_food"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_alignParentLeft="true"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="一天的食物"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/button_addFood"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/button_add"
                        android:gravity="center"
                        android:textSize="20dp" />

				</RelativeLayout>
				
                <com.edu.thss.smartdental.eat.ScrollListviewDelete
                    android:id="@android:id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </com.edu.thss.smartdental.eat.ScrollListviewDelete>
                
                <TextView
                    android:id="@+id/textView_44"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/corner_bottom"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />
                
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.18" >

                <Button
                    android:id="@+id/button_scoring"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.09"
                    android:background="@drawable/button_run"
                    android:gravity="center"
                    android:text="RUN"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </RelativeLayout>

        </LinearLayout>



</ScrollView>